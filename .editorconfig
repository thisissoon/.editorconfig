#
# SOON_ Cross team root editorconfig configuration
# Projects can also have a local .editorconfig to customise syntax
#

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Backend Languages (Python, Go, Ruby etc)

# Python
[*.py]
indent_style = space
indent_size = 4

# Ruby
[{*.rb,Vagrantfile}]
indent_style = space
indent_size = 2

# Front End Languages (HTML, JS, CSS etc)

[*.js]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 2

# Misc

# YAML Based files - 2 space indent
[*.{yml, yaml, sls}]
indent_style = space
indent_size = 2
